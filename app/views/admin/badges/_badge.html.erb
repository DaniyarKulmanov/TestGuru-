<tbody>
<tr>
  <td class="text-center"><%= badge.name %></td>
  <td class="text-center"><%= image_tag(badge.filename) %></td>
  <td class="text-center"><%= t(badge.criteria, scope: 'badges.CRITERIA') %></td>
  <td class="text-center"><%= badge.parameter %></td>
  <td class="text-center"><%= link_to t('show'), admin_badge_path(badge) %></td>
  <td class="text-center"><%= link_to t('edit'), edit_admin_badge_path(badge) %></td>
  <td class="text-center"><%= link_to t('delete'), admin_badge_path(badge),
                                      method: :delete,
                                      data: { confirm: t('confirm', name: badge.name) } %></td>
</tr>
</tbody>