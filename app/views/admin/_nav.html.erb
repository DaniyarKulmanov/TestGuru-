<div class="navbar navbar-warning bg-warning">
  <%= link_to t('.test_guru'), root_path, class: 'navbar-brand', data: {current_locale: I18n.locale } %>

  <span class="navbar-text">
    <% if user_signed_in? %>
      <%= change_locale %>
      <%= link_to t('activerecord.models.test.many'), admin_tests_path %>
      <%= link_to t('activerecord.models.gist.many'), admin_gists_path %>
      <%= link_to t('activerecord.models.badge.many'), admin_badges_path %>
      <%= t('.welcome')%>, <b><%= current_user.email %></b> <%= t('.guru')%> |
      <%= link_to t('.log_out'), destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to t('.log_in'), new_session_path(resource_name) %> |
      <%= link_to t('.sign_up'), new_registration_path(resource_name) %>
    <% end %>
  </span>
</div>
