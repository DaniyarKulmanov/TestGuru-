<tbody>
  <tr>
    <td>
      <%= content_tag :span, test.title, class: 'test-title', data: {test_id: test.id} %>
      <%= render 'form_inline', test: test == @test ? @test : test %>
    </td>

    <td class="text-center"><%= test.level %></td>
    <td class="text-center"><%= test.questions.count %></td>
    <td class="text-center"><%= link_to t('show'), admin_test_path(test) %></td>
    <td class="text-center">
      <%= link_to t('edit'),
                  edit_admin_test_path(test),
                  data: {test_id: test.id},
                  class: 'form-inline-link' %></td>
    <td class="text-center">
      <%= link_to t('delete'),
                  admin_test_path(test),
                  method: :delete,
                  data: { confirm: t('confirm', name: test.title) } %></td>
    <td class="text-center"><%= button_to t('test.start'), begin_test_path(test) %></td>
  </tr>
</tbody>
