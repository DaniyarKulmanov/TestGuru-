<h2><%= t('.header') %></h2>

<p><%= link_to t('new', name: t('activerecord.models.test.one')), new_admin_test_path(@test) %></p>

<%= render 'shared/errors', resource: @test %>

<table class="table table-bordered border-info">
  <thead>
    <tr>
      <th class="sort-by-title pointer">
        <%= t('admin.tests.show.title', title: nil)%>
        <%= octicon 'arrow-up', class: 'text-success' %>
        <%= octicon 'arrow-down', class: 'text-success' %>
      </th>
      <th class="text-center"><%= t('admin.tests.show.level', level: nil)%></th>
      <th class="text-center"><%= t('.questions_count') %></th>
      <th colspan="4" class="text-center"><%= t('actions') %></th>
    </tr>
  </thead>
  <%= render @tests %>

</table>
