<h2><%= t('.header') %></h2>

<p><%= link_to t('admin.tests.new.header'), new_admin_test_path(@test) %></p>

<table class="table">
  <thead>
    <tr>
      <th class="sort-by-title pointer">
        <%= t('admin.tests.show.title', title: nil)%>
        <%= octicon 'arrow-up', class: 'text-success' %>
        <%= octicon 'arrow-down', class: 'text-success' %>
      </th>
      <th>
        <%= t('admin.tests.show.level', level: nil)%>
      </th>
      <th>
        <%= t('.questions_count') %>
      </th>
      <th colspan="4"><%= t('admin.tests.show.actions') %></th>
    </tr>
  </thead>
  <%= render @tests %>

</table>
