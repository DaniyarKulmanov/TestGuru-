<h1><%= t('.title', title: @test.title )%></h1>

<h2><%= t('.level', level: @test.level )%></h2>

<h2><%= t('activerecord.attributes.test.category')%> <%= @test.category.title %></h2>

<h2><%= t('activerecord.attributes.test.timer')%> <%= @test.timer %></h2>

<%= link_to t('new', name: t('activerecord.models.question.one').downcase), new_admin_test_question_path(@test) %>

<h2><%= t('activerecord.models.question.many') %></h2>

<table class="table table-bordered border-info">
  <thead>
    <tr>
      <th class="text-center"><%= t('activerecord.attributes.question.body') %></th>
      <th colspan="3" class="text-center"><%= t('actions') %></th>
    </tr>
  </thead>
  <%= render partial: 'admin/questions/question', collection: @test.questions %>
</table>

<p><%= link_to t('edit'), edit_admin_test_path(@test) %></p>
<p><%= link_to t('back'), admin_tests_path %></p>