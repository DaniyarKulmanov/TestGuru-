<h1>Test name: <%= @test.title %></h1>

<h2>Level: <%= @test.level %></h2>

<%= link_to 'Add question', new_test_question_path(@test) %>

<h2>Questions:</h2>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <%= render partial: 'questions/question', collection: @test.questions %>
</table>

<p><%= link_to 'edit', edit_admin_test_path(@test) %></p>
<p><%= link_to 'back', admin_tests_path %></p>