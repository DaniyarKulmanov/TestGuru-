<%= form_with url: sessions_path do |form| %>
  <% if flash[:alert] %>
    <%= content_tag :p, flash[:alert], class: 'flash alert' %>
  <% end %>

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email, id: :user_email %><br>
  </p>

  <p>
    <%= form.label :password %><br>
    <%= form.password_field :password, id: :user_password %><br>
  </p>

  <p>
    <%= form.submit 'Enter' %>
  </p>
<% end %>